<?xml version="1.0"?>
<package>
  <name>openni2_camera</name>
  <version>0.1.4</version>
  <description>Drivers for the Asus Xtion and Primesense Devices. For using a kinect
  with ROS, try the <a href="http://wiki.ros.org/freenect_stack">freenect stack</a> 
  This fork authored by jordi.pages@pal-robotics.com integrates 
  the NiTE2 library for gesture recognition based on the nite::HandTracker and person
  detection and tracking based on the nite::UserTracker
  </description>
  <author email="jkammerl@todo.todo">Julius Kammerl</author>
  <author email="jordi.pages@pal-robotics.com">Jordi Pages</author>
  <license>BSD</license>

  <maintainer email="jordi.pages@pal-robotics.com">Jordi Pages</maintainer>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>camera_info_manager</build_depend>
  <build_depend>nodelet</build_depend>
  <build_depend>sensor_msgs</build_depend>
  <build_depend>roscpp</build_depend>
  <build_depend>dynamic_reconfigure</build_depend>
  <build_depend>image_transport</build_depend>
  <build_depend>pal_detection_msgs</build_depend>
  <build_depend>cv_bridge</build_depend>
  <build_depend>tf</build_depend>

  <run_depend>camera_info_manager</run_depend>
  <run_depend>nodelet</run_depend>
  <run_depend>dynamic_reconfigure</run_depend>
  <run_depend>sensor_msgs</run_depend>
  <run_depend>roscpp</run_depend>
  <run_depend>image_transport</run_depend>
  <run_depend>pal_detection_msgs</run_depend>  
  <run_depend>cv_bridge</run_depend>
  <run_depend>tf</run_depend>

  <export>
    <nodelet plugin="${prefix}/openni2_nodelets.xml"/>
  </export>
</package>
